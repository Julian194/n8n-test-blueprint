#!/bin/sh
echo "Running pre-commit checks..."

# Run typecheck
echo "→ Type checking..."
npm run typecheck
if [ $? -ne 0 ]; then
  echo "❌ Type check failed"
  exit 1
fi

# Run linter
echo "→ Linting..."
npm run lint
if [ $? -ne 0 ]; then
  echo "❌ Lint failed"
  exit 1
fi

echo "✓ Pre-commit checks passed"
